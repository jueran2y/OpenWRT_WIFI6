config interface 'wan'
        option enabled '1'
        option reliability '2'
        option count '1'
        option timeout '2'
        option interval '5'
        option down '3'
        option up '8'
        list track_ip '8.8.4.4'
        list track_ip '8.8.8.8'

config member 'wan_m1_w3'
        option interface 'wan'
        option metric '1'
        option weight '3'

config member 'wan_m2_w3'
        option interface 'wan'
        option metric '2'
        option weight '3'

config policy 'wan_only'
        list use_member 'wan_m1_w3'

config policy 'balanced'
        list use_member 'wan_m1_w3'
        list use_member 'wan1_m1_w3'
        list use_member 'wan0_m1_w3'
        option last_resort 'unreachable'

config rule 'https'
        option sticky '1'
        option dest_port '443'
        option proto 'tcp'
        option use_policy 'balanced'

config rule 'default_rule'
        option dest_ip '0.0.0.0/0'
        option use_policy 'balanced'

config interface 'WWAN0'
        option enabled '1'
        list track_ip '8.8.8.8'
        list track_ip '8.8.4.4'
        option count '5'
        option timeout '2'
        option interval '5'
        option down '3'
        option up '3'
        option reliability '2'

config interface 'WWAN1'
        option enabled '1'
        list track_ip '8.8.4.4'
        list track_ip '8.8.8.8'
        option reliability '2'
        option count '3'
        option timeout '2'
        option interval '5'
        option down '3'
        option up '3'

config member 'wan0_m1_w3'
        option interface 'WWAN0'
        option metric '1'
        option weight '3'

config member 'wan0_m2_w3'
        option interface 'WWAN0'
        option metric '2'
        option weight '3'

config member 'wan1_m1_w3'
        option interface 'WWAN1'
        option metric '1'
        option weight '3'

config member 'wan1_m2_w3'
        option interface 'WWAN1'
        option metric '2'
        option weight '3'

config policy 'wan_wan1'
        list use_member 'wan_m1_w3'
        list use_member 'wan1_m1_w3'
        option last_resort 'unreachable'

config policy 'wan_wan0'
        list use_member 'wan_m1_w3'
        list use_member 'wan0_m1_w3'
        option last_resort 'unreachable'